{% extends "base.twig" %}

{% block content %}
	<div class="content-wrapper">
		<article class="post-type-{{ post.post_type }}" id="post-{{ post.ID }}">
			<div class="grid-container post-header">
				<div class="grid-x grid-padding-x text-center show-for-small-only">
					<div class="cell">
						<h1 class="article-h1">{{ post.title }}</h1>
						<p class="blog-author">{{ post.date|date('n.j.Y') }}</p>
						<div class="share-buttons">
							{{ function('do_shortcode', '[addtoany]') }}
						</div>
					</div>
				</div>
			</div>
			<div class="grid-container post-body">
				<div class="grid-x grid-padding-x align-middle">
					<div class="cell hide-for-small-only medium-3 overlap-container">
						<p class="blog-author">{{ post.date|date('n.j.Y') }}</p>
						<h1 class="article-h1 overlap">{{ post.title }}</h1>
						<div class="share-buttons">
							{{ function('do_shortcode', '[addtoany]') }}
						</div>
					</div>
					<div class="cell medium-9">
						<img class="single-hero-image overlap" src="{{post.thumbnail | resize(900,500) }}" alt="">
					</div>
				</div>
				<div class="grid-x grid-padding-x align-center">
					<div class="cell medium-8 large-6 large-offset-2">
						<section class="article-content">
							<div class="article-body">
								{{post.content}}
							</div>
						</section>
					</div>
					<div class="cell text-center">
						<div class="share-buttons">
							{{ function('do_shortcode', '[addtoany]') }}
						</div>
					</div>
				</div>
			</div>
		</article>
		<section class="grid-container more-posts">
			<div class="grid-x grid-padding-x">
				<div class="cell">
					<h2 class="single-line-height">More From The Blog</h2>
					<hr class="black">
				</div>
			</div>
			<div class="grid-x grid-padding-x small-up-1 medium-up-3">
				{% for post in more_posts %}
					<div class="cell">
						{% include 'tease-post.twig' %}
					</div>
				{% endfor %}
			</div>
		</section>
	</div><!-- /content-wrapper -->
{% endblock %}
