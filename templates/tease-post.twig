{% if square is empty %}
  {% set square = false %}
{% endif %}
{% if thumb is empty %}
  {% set thumb = post.thumbnail.src %}
{% endif %}
<article class="grid-y article-item post-type-{{post.type}} post-category-{{post.category}}" id="post-{{post.ID}}" data-equalizer-watch>
  <div class="cell grow">
    <a href="{{post.link}}">

      {% if square == true %}
        <img class="b-lazy square" src=data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw== data-src="{{ thumb | resize(500, 500) }}" alt="{{ post.title }}">
      {% else %}
        <img class="b-lazy" src=data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw== data-src="{{ thumb | resize(500, 300) }}" alt="{{ post.title }}">
      {% endif %}
      <header>
        <span class="post-category">{{post.category}} <span class="divider"> | </span></span>
        <span class="post-date">{{post.date|date('n.j.Y')}}</span>
      </header>
      <h2 class="post-title">{{post.title}}</h2>
      <div class="post-content">{{ post.post_content|excerpt(15) }}</div>
      {% if post.type == 'muso-album' %}
        <p class="post-artist">{{ post.terms('artist') | first }}</p>
      {% endif %}
    </a>
  </div>
  <div class="cell">
    <footer>
      <a href="{{post.link}}">Read More</a>
    </footer>
  </div>
</article>
