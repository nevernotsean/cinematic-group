{% extends "base.twig" %}

{% block content %}
	<div class="content-wrapper">
		<div class="text-center">
			<h1 class="base-title">Roster</h1>
		</div>
		<div class="grid-container">
				<div class="grid-x grid-padding-x small-up-1 medium-up-2 large-up-3">
					{% for post in posts %}
						<div class="cell">
							{% include 'tease-post.twig' %}
						</div>
					{% endfor %}
				</div>
			</div>
		</div>
	</div><!-- /content-wrapper -->
{% endblock %}
