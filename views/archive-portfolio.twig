{% extends "base.twig" %}

{% block content %}
	<div class="content-wrapper">
		<div class="post-header">
			<h1 class="base-title text-center">Roster</h1>
			<div class="grid-container">
				<div class="post-categories text-center grid-x grid-padding-x">
					<div class="cell shrink"><a href="{{ site.url }}/roster/">All</a></div>
					{% for category in categories %}
						<div class="cell shrink">
							<a href="{{ site.url }}/roster/{{ category | lower }}">{{ category }}</a>
						</div>
					{% endfor %}
				</div>
			</div>
		</div>
		<div class="grid-container post-body">
			<div class="grid-x grid-padding-x grid-padding-y roster-logos">
				{% for post in posts %}
					{% if post.get_field('artist_logo') %}
						<div class="cell small-1">
							<img src="{{ TimberImage(post.get_field('artist_logo')).src }}" alt="">
						</div>
					{% endif %}
				{% endfor %}
			</div>
			<div class="grid-x grid-padding-x small-up-1 medium-up-2 large-up-3">
				{% for post in posts %}
					<div class="cell">
						{# {% include 'tease-post.twig' with { 'hover': TimberImage(post.get_field('artist_logo')).src } %} #}
						{% include 'tease-post.twig' %}
					</div>
				{% endfor %}
			</div>
		</div>
	</div><!-- /content-wrapper -->
{% endblock %}
