{% extends "base.twig" %}

{% block content %}
	<div class="hero">
		{% include "hero-" ~ posts[0].post_type ~ ".twig" %}
	</div>
	<div class="content-wrapper">
		<div class="row collapse">
			{% if title %}<h1 class="archive-title text-center">{{title}}</h1>{% endif %}
			<div class="small-12 column small-up-1 medium-up-2 large-up-3">
				{% for post in posts %}
					<div class="column">
						{% include 'archive-item.twig' %}
					</div>
				{% endfor %}
			</div>
		</div>
	</div><!-- /content-wrapper -->
{% endblock %}
