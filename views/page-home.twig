{% extends "base.twig" %}

{% block content %}
    <div id="loading-container">
      <div class="underside"></div>
      <div id="loading-bar"></div>
      <h2 class="enter">Enter</h2>
      <div class="curtain">
        <div class="border-left"></div>
        <div class="border-right"></div>
        <div class="border-top"></div>
        <div class="border-bottom"></div>
      </div>
    </div>
    <div class="content-wrapper">
      <div class="post-body">
        <div class="hero">
          <video poster="data:image/gif,AAAA" muted playsinline="" autoplay="" loop="" preload="none" id="player" data-src="{{ page.get_field('vimeo_link') }}"></video>
          <a href="#" class="mute hide-for-small-only">
              <i class="fa fa-volume-off">Sound</i>
          </a>
        </div>
        <div class="parallax-container">
          <div class="parallax" style="transform: translateY(-50%); opacity: 1;">
            <h1>Cinematic Worldwide</h1>
          </div>
        </div>
        <section class="grid-container" data-equalizer data-equalize-on="medium" data-equalize-by-row="true">
          <div class="grid-x grid-padding-x">
            {% for post in features %}
            <div class="cell medium-6 large-8 feature-cell">
              {% include 'tease-post-overlap.twig' with { 'wide': true } %}
            </div>
            {% endfor %}

            {% for post in radio %}
            <div class="cell medium-6 large-4 radio-cell">
              {% include 'tease-post.twig' %}
            </div>
            {% endfor %}
          </div>
        </section>
        <section class="grid-container" data-equalizer data-equalize-on="medium" data-equalize-by-row="true">
          <div class="grid-x grid-padding-x small-up-1 medium-up-3">
            {% for post in posts | slice(2,5) %}
            <div class="cell">
              {% include 'tease-post.twig' with { 'blazy' : false } %}
            </div>
            {% endfor %}
          </div>
        </section>
        <!-- <section class="grid-container">
          <div class="text-center">
            <a href="/blog">View More</a>
          </div>
        </section> -->
        {% set shop_image = TimberImage(page.get_field('shop_image')).src | resize(360,228) %}
        {% if shop_image is empty %}
          {% set shop_image = theme.path ~ '/static/img/shop-tout.jpg'%}
        {% endif %}
        {% set radio_image = TimberImage(page.get_field('radio_image')).src | resize(360,228) %}
        {% if radio_image is empty %}
          {% set radio_image = theme.path ~ '/static/img/radio-tout.jpg' %}
        {% endif %}
        {% set tv_image = TimberImage(page.get_field('tv_image')).src | resize(360,228) %}
        {% if tv_image is empty %}
          {% set tv_image = theme.path ~ '/static/img/tv-tout.jpg' %}
        {% endif %}
        <section class="grid-container">
          <div class="grid-x grid-padding-x grid-padding-y small-up-1 medium-up-3">
            <div class="cell">
              <a href="https://cinematic.myshopify.com/" target="_blank" class="image-block">
                <img src="{{shop_image}}" alt="">
                <div class="overlay">
                  <h2>Cinematic Shop</h2>
                  <p>Shop Now</p>
                </div>
              </a>
            </div>
            <div class="cell">
              <a href="/radio" class="image-block">
                <img src="{{radio_image}}" alt="">
                <div class="overlay">
                  <h2>Cinematic Radio</h2>
                  <p>Listen Now</p>
                </div>
              </a>
            </div>
            <div class="cell">
              <a href="/tv" class="image-block">
                <img src="{{tv_image}}" alt="">
                <div class="overlay">
                  <h2>Cinematic TV</h2>
                  <p>Watch Now</p>
                </div>
              </a>
            </div>
          </div>
        </section>
      </div>
    </div>
    <!-- /content-wrapper -->
{% endblock %}
