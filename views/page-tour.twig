{% extends "base.twig" %}

{% block content %}
	<div id="console" style="position: fixed; top: 0; right: 0; padding: 3px; background:#000; color: #fff; z-index: 99;"></div>
	<div class="hero">
		<div class="bg hero-bg" style="background-image: url({{ theme.path }}/static/img/hero-ph.jpg);" rel="fullscreen"></div>
		<div class="hero-content">
			<h1>All Ameri<span class="strikethrough">kkk</span>an Bada$$</h1>
			<a href="#">Listen Now</a>
		</div>
	</div>
	<div class="content-wrapper amerikan-bg">
		<canvas id="wavyCanvas"></canvas>
		<img id="flagsrc" data-src="{{theme.path}}/static/img/american-bg-sm.jpg" alt="">
		<div class="inner-wrapper">
			<div class="row">
				<div class="small-12 medium-12 large-8 small-centered column text-center">
					<h2>JOEY BADA$$ TOUR</h2>
					<table class="tourdates">
						{% for row in post.get_field('tour_row') %}
						<tr>
							<td>{{row.date}}</td>
							<td><span>{{row.venue}}</span></td>
							<td>{{row.city_state}}</td>
							{% if row.disable %}
								<td><a href="#" class="disable">Buy Tickets</a></td>
							{% else %}
								<td><a href="{{row.buy_url}}">Buy Tickets</a></td>
							{% endif %}

						</tr>
						{% endfor %}
					</table>
					<div class="red more-dates">
						<span>* more tour dates </span>
						<div>to be annouced soon!</div>
					</div>
				</div>
			</div>
		</div>
	</div><!-- /content-wrapper -->
{% endblock %}
